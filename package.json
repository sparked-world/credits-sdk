{
  "name": "@sparked/credits-sdk",
  "version": "0.1.2",
  "description": "Shared credits system for Sparked applications with Redis-backed event sourcing",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "keywords": [
    "credits",
    "redis",
    "event-sourcing",
    "upstash",
    "billing"
  ],
  "author": "Sparked",
  "license": "MIT",
  "dependencies": {
    "@upstash/redis": "^1.34.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^20.10.6",
    "dotenv": "^17.2.3",
    "tsup": "^8.0.1",
    "typescript": "^5.9.3",
    "vitest": "^1.1.0"
  }
}
